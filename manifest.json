{
  "manifest_version": 2,

  "name": "Kiss* Show Playlist",
  "description": "This extension makes a playlist of a show off of any Kiss website.",
  "version": "1.0",
  
  "content_scripts": [{
	"js": [ "popup.js" ],
    "matches": [ "http://*/*" ]
	}],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
